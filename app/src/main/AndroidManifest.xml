          xmlns:tools="http://schemas.android.com/tools" package="com.oxcoding.fluze">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/fluze_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fluze_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.oxcoding.fluze.ui.single_movie_details.SingleMovie">
        </activity>
        <activity android:name="com.oxcoding.fluze.ui.popular_movie.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>